<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Name</th>
      <th>Genre</th>
      <th>Pages</th>
      <th>Year</th>
      <th>Language</th>
      <th>Publisher</th>
      <th>Author</th>
      <th>Shelf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.name %></td>
        <td><%= book.genre %></td>
        <td><%= book.pages %></td>
        <td><%= book.year %></td>
        <td><%= book.language %></td>
        <td><%= book.publisher_id %></td>
        <td><%= book.author_id %></td>
        <td><%= book.shelf_id %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

